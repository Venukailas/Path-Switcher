{
  "name": "path-switcher",
  "displayName": "Path Switcher",
  "description": "Toggle relative <-> absolute JS paths easily in VS Code",
  "version": "1.0.0",
  "publisher": "kianoland",
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": ["Other"],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "path-switcher.togglePath",
        "title": "Toggle Path (Absolute <-> Relative)"
      },
      {
        "command": "path-switcher.toAbsolute",
        "title": "Convert All Paths to Absolute"
      },
      {
        "command": "path-switcher.toRelative",
        "title": "Convert All Paths to Relative"
      }
    ],
    "keybindings": [
      {
        "command": "path-switcher.togglePath",
        "key": "ctrl+alt+p",
        "when": "editorTextFocus"
      },
      {
        "command": "path-switcher.toAbsolute",
        "key": "ctrl+alt+a",
        "when": "editorTextFocus"
      },
      {
        "command": "path-switcher.toRelative",
        "key": "ctrl+alt+r",
        "when": "editorTextFocus"
      }
    ]
  },
  "icon": "images/icon.png",
  "repository": {
    "type": "git",
    "url": "https://github.com/kianoland/path-switcher"
  },
  "bugs": {
    "url": "https://github.com/kianoland/path-switcher/issues"
  },
  "homepage": "https://github.com/kianoland/path-switcher#readme",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "lint": "eslint src --ext ts",
    "pretest": "npm run compile && npm run lint",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.105.0",
    "@typescript-eslint/eslint-plugin": "^8.45.0",
    "@typescript-eslint/parser": "^8.45.0",
    "eslint": "^9.36.0",
    "mocha": "^11.7.4",
    "typescript": "^5.9.3"
  }
}
